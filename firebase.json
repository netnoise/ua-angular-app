{
  "hosting": {
    "public": "dist",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      ".git",
      ".idea",
      ".browserslistrc",
      ".editorconfig",
      ".firebaserc",
      ".gitignore",
      ".prettierrc.json",
      ".prettierignore",
      "database.rules.json",
      "firebase.json",
      "karma.conf.js",
      "package.json",
      "README.md",
      "tsconfig.app.json",
      "tsconfig.json",
      "tsconfig.spec.json",
      "tslint.json",
      "yarn.lock"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
